<!DOCTYPE html>
<html lang="en">
    <header>
        <% if flash[:errors] %>
            <% flash[:errors].each do |e| %>
            <p id="error"><%= e %></p>  
            <% end %>
        <% end %>
        <div id="header_container">
                <a href="/ideas">Ideas Page</a>
                <br>
                <a href="/logout">Logout</a>
        </div>
    </header>
    <body>
        <div class="post_group">
            <p><%= @idea.user.name%> says:</p>
            <p class="message_content"><%= @idea.content %></p>
        </div>


        <h3>People who liked this post:</h3>
        <div style='border: 2px solid black; height :200px; overflow: scroll'>
            <div>
                <p display: inline-block>Alias</p>
                <% @users.each do |person| %>
                    <% if @likes.find_by(user_id: person.id) %>
                        <a href="/users/<%=person.id%>" class='btn btn-default'><%= person.alias %></a>
                    <% end %>
                <% end %>
            </div>
            <div>            
                <p display: inline-block>Name</p>
                <% @users.each do |person| %>
                    <% if @likes.find_by(user_id: person.id) %>
                        <p><%= person.name %></p>
                    <% end %>
                <% end %>
            </div>
        </div>  
    </body>
</html>